{
    "version": 10,
    "configurePresets": [
        {
            "name": "default-gcc",
            "hidden": true,
            "displayName": "Default Config",
            "description": "Default build using Ninja generator",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "environment": {
                "TARGET": "esp32"
            },
            "cacheVariables": {
                "TARGET": "$env{TARGET}",
                "CMAKE_TOOLCHAIN_FILE": "$env{IDF_PATH}/tools/cmake/toolchain-$env{TARGET}.cmake",
                "CROSS_COMPILING": "ON"
            }
        },
        {
            "name": "gcc-debug",
            "inherits": "default-gcc",
            "displayName": "GCC Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "gcc-release",
            "inherits": "default-gcc",
            "displayName": "GCC Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}